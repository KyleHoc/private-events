  <style type="text/css">
    .eventblock {background-color: lightgray; color: blueviolet; padding: 20px; margin: 10px;}
  </style>
</head>

<h1>Events:</h1>
<div>
  <% @user.event.each do |event| %>
    <div class = eventblock>
      <p>Event Name: <% event.name %> </p>
      <p>Location: <% event.location %> </p>
      <p>Date: <% event.date %>
    </div>
  <% end %>
  <%= link_to "Return Home", index_path %>
</div>






